{
    "explorer.excludeGitIgnore": true,

    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",

    // Set the default
    "editor.formatOnSave": false,

    // Enable per-language for Prettier
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.lintTask.enable": true,

    // https://marketplace.visualstudio.com/items?itemName=Orta.vscode-jest
    // Debugger tests are rather heavyweight because they require the extension to be bundled
    // and spawn the debug adapter as a separate process for each test, so they shouldn't be
    // run automatically.
    "jest.runMode": {
        "type": "on-demand",
    }
}
